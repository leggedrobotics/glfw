#include("${CMAKE_CURRENT_LIST_DIR}/glfw3Targets.cmake")

include(FindPackageHandleStandardArgs)
unset(glfw3_FOUND)

# Setup the noesis package variables
set(glfw3_VERSION "@CONFIG_VERSION@")
set(glfw3_INCLUDE_DIRS "@CONFIG_INCLUDE_DIRS@")
set(glfw3_LIBRARIES "@CONFIG_LIBRARIES@")

# Check if the path variables where set succesfully
find_package_handle_standard_args(glfw3
  REQUIRED_VARS
    glfw3_INCLUDE_DIRS
    glfw3_LIBRARIES
)

# Check if package search and setup was successful overall
if (glfw3_FOUND)
  message(STATUS "glfw3:")
  message(STATUS "  Version: ${glfw3_VERSION}")
  message(STATUS "  Includes: ${glfw3_INCLUDE_DIRS}")
  message(STATUS "  Libraries: ${glfw3_LIBRARIES}")
endif()

